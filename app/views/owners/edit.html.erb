<div class="flex flex-col h-screen bg-blue-200">
  <h1>Perfil</h1>

  <%= form_with url: '/owners/1', method: 'patch', class: 'px-3 flex flex-col md:flex-row items-center w-full my-5' do %>
    <div>
      <label for="owner-name" class="text-gray-700 text-base">
        Nome
      </label>
      <div class="m-5 md:my-0">
        <input class="bg-gray-200 appearance-none border-2 border-gray-200
                      rounded w-full py-2 px-4 text-gray-700 leading-tight
                      border-blue-300 focus:outline-none focus:bg-white
                      focus:border-blue-500"
              id="owner-name"
              name="name"
              type="text">
      </div>
    </div>

    <div>
      <label for="owner-usable-tables-count" class="text-gray-700 text-base">
        Quantidade de mesas disponíveis
      </label>
      <div class="m-5 md:my-0">
        <input class="bg-gray-200 appearance-none border-2 border-gray-200
                      rounded w-full py-2 px-4 text-gray-700 leading-tight
                      border-blue-300 focus:outline-none focus:bg-white
                      focus:border-blue-500"
              id="owner-usable-tables-count"
              name="usable_tables_count"
              type="number">
      </div>
    </div>

    <div>
      <label for="owner-reservations-start-time" class="text-gray-700 text-base">
        Horário de abertura das reservas
      </label>
      <div class="m-5 md:my-0">
        <input class="bg-gray-200 appearance-none border-2 border-gray-200
                      rounded w-full py-2 px-4 text-gray-700 leading-tight
                      border-blue-300 focus:outline-none focus:bg-white
                      focus:border-blue-500"
              id="owner-reservations-start-time"
              name="reservations_start_time"
              type="time">
      </div>
    </div>

    <div>
      <label for="owner-name" class="text-gray-700 text-base">
        Horário de fechamento das reservas
      </label>
      <div class="m-5 md:my-0">
        <input class="bg-gray-200 appearance-none border-2 border-gray-200
                      rounded w-full py-2 px-4 text-gray-700 leading-tight
                      border-blue-300 focus:outline-none focus:bg-white
                      focus:border-blue-500"
              id="owner-name"
              type="time">
      </div>
    </div>

    <div>
      <button class="shadow bg-blue-500 hover:bg-blue-400
                     focus:shadow-outline focus:outline-none text-white font-bold py-2
                     px-4 rounded"
              type="submit">
        Salvar
      </button>
    </div>
  <% end %>

  <h1>Restaurantes Cadastrados</h1>

  <%= form_tag owners_tables_path, class: 'px-3 flex flex-col md:flex-row items-center w-full my-5' do %>
    <label for="tables-input" class="text-gray-700 text-base">
      Número de mesas
    </label>
    <div class="m-5 md:my-0">
      <input class="bg-gray-200 appearance-none border-2 border-gray-200
                    rounded w-full py-2 px-4 text-gray-700 leading-tight
                    border-blue-300 focus:outline-none focus:bg-white
                    focus:border-blue-500"
             id="tables-input"
             type="text">
    </div>
    <div>
      <button class="shadow bg-blue-500 hover:bg-blue-400
                     focus:shadow-outline focus:outline-none text-white font-bold py-2
                     px-4 rounded"
              type="submit">
        Cadastrar
      </button>
    </div>
  <% end %>
</div>
