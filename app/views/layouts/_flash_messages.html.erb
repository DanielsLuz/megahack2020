<%- if flash[:alert] %>
  <div class="w-full bg-orange-100 border-l-4 border-orange-500 text-orange-700 p-4" role="alert">
    <p class="font-bold"><%= flash[:alert] %></p>
  </div>
<% end %>

<%- if flash[:notice] %>
  <div class="w-full bg-green-100 border-l-4 border-green-500 text-green-700 p-4" role="notice">
    <p class="font-bold"><%= flash[:notice] %></p>
  </div>
<% end %>
