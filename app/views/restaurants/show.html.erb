<div class="grid md:grid-cols-1">
  <div class="w-full bg-gray-100 p-6 text-gray-600">
    <div>
      Estabelecimento
    </div>
    <div class="text-xl text-black">
      <%= @restaurant.name %>
    </div>
    <div class="text-sm">
      Descrição: <span class="text-black"><%= @restaurant.description %></span>
    </div>
  </div>

  <%= link_to restaurant_orders_path(@restaurant.id) do %>
    <div class="w-auto form-button bg-green-600 hover:bg-green-500">
      Ver pedidos
    </div>
  <% end %>

  <div class="w-full p-6 bg-gray-200">
    <div class="text-black font-bold">
      <div>Produtos cadastrados</div>
      <%= link_to '+ Cadastrar produto', new_restaurant_item_path(@restaurant.id),
        class: 'w-full text-blue-600 hover:text-blue-500 underline' %>
    </div>
    <table class="table-auto w-full">
      <thead>
        <tr class="text-gray-700">
          <th class="px-4 py-2 text-left">Produto</th>
          <th class="px-4 py-2 text-left">Preço</th>
        </tr>
      </thead>
      <tbody>
        <% @restaurant.items.each_with_index do |item, index| %>
          <tr class="<%= (index % 2 == 0) ? 'bg-gray-300' : ''%>">
            <td class="border px-4 py-2"><%= item.name %></td>
            <td class="border px-4 py-2"><%= number_to_currency(item.value.to_f, unit: 'R$', format: "%u %n") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
