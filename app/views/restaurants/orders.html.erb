<div class="h-screen w-full bg-blue-600 flex flex-col items-center justify-center">
  <div class="bg-gray-100 md:w-1/2 w-full p-4">
    <h6 class="font-bold text-xl mb-2">Pedidos</h6>

    <% @orders.each do |order| %>
      <tr>
        <div class="bg-gray-300 p-4 mb-4 shadow-md">
          <%= "# #{order.id.to_s.upcase[-4..-1]} - #{order.item.name}" %>
        </div>
      </tr>
    <% end %>
  </div>
</div>
