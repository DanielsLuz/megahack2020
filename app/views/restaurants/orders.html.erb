<div class="p-8">
  <div class="text-white text-lg font-bold mb-3">
    Pedidos em andamento
  </div>
  <div class="grid md:grid-cols-2 gap-4">
    <% @orders.each do |order| %>
      <div class="flex flex-col bg-white rounded-lg p-4">
        <div class="mb-2">
          <h2 class="text-lg">Pedido: <%= order.item.name %></h2>
          <div>Hor√°rio: <%= order.time_slot.to_s %></div>
        </div>
        <%= link_to "Chamar cliente!", order_complete_path(order.id), class: "form-button w-full bg-green-500 hover:bg-green-600", method: 'put' %>
      </div>
    <% end %>
  </div>
</div>
