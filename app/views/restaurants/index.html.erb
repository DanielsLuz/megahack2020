<div class="flex flex-col h-full overflow-auto bg-blue-200 p-5">
  <% @restaurants.each do |restaurant| %>
    <%= link_to restaurant_menu_path(restaurant[:id]), class: "card my-3 #{restaurant[:color]}" do %>
      <div class="mb-8">
        <div class="text-gray-900 font-bold text-xl mb-2">
          <%= restaurant[:name] %>
        </div>
        <p class="text-gray-700 text-base">
          <%= restaurant[:description] %>
        </p>
      </div>
    <% end %>
  <% end %>
</div>
